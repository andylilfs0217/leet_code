  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Launch Current File",
      "request": "launch",
      "mainClass": "${file}"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Adventure of Code",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/adventofcode/Output.py",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}